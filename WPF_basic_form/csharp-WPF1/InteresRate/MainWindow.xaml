        <Button Content="Calculate" HorizontalAlignment="Left" Margin="77,118,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Button_Click" Width="120" Height="26"/>
        <TextBox x:Name="rate1" HorizontalAlignment="Left" Margin="77,52,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Rate" HorizontalAlignment="Left" Margin="10,48,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBlock x:Name="res1" HorizontalAlignment="Left" Margin="197,87,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label Content="Result" HorizontalAlignment="Left" Margin="10,82,0,0" Grid.Row="1" VerticalAlignment="Top"/>

